<h4 class="ui center aligned medium icon header">
  <i class="orange circular coffee icon"></i>
  Say Something
</h4>

<div class="ui two column grid"> 

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Enter a message...", id: "text-field"%>
              <%= f.button '<i class="borderd inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>    
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="ui middle aligned divided list">
        <% @users.each do |user| %>
          <div class="item">
            <div class="right floated content">
              <div class="ui button">Add</div>
            </div>
            <i class="address book large orange icon"></i>
            <div class="content">
              <%= user.username %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
