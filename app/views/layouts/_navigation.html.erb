<div class="ui inverted small menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <% if logged_in? %>
        <div class="ui dropdown item">
          Account <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to "Edit your profile", "#", class: "item" %>
            <%= link_to "Log out", logout_path, class: "item", method: :delete %>       
          </div>
        </div>
      <% else %>  
        <%= link_to "Log in", login_path, class: "item" %>
        <div class="item">
            <div class="ui primary button">Sign Up</div>
        </div>
      <% end %>
    </div>
  </div>
</div>