<h2 class="ui header">
  <i class="address book orange icon"></i>
  <div class="content">
    Welcome to MessageMe!
    <div class="sub header">Log in to continue</div>
  </div>
</h2>

<div class="ui placeholder inverted segment">
  <div class="ui three column very relaxed centered stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username", id: "login-label" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password", id: "login-label" %>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui orange submit button" %>
      <% end %>
    </div>

    <div id="divider" class="column">
      <div id="login-label" class="ui vertical divider">
          Or 
      </div>
    </div>

    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
</div>